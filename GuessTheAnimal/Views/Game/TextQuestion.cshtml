@model GuessTheAnimal.Models.QuestionViewModel

<div class="jumbotron" style="margin-top:20px;">

  @if (Model.FirstQuestion)
  {
    <h2 class="text-center">Ok now that you have thought of an animal...</h2>
  }


  @if (Model.previousAnswers != null && Model.previousAnswers.Count > 0)
  {
    <h3><i>The facts so far...</i></h3>
    foreach (KeyValuePair<string, string> answer in Model.previousAnswers)
    {
      <h4><i>@answer.Key &nbsp; @answer.Value</i></h4>
    }
  }

  <h1 class="text-center" style="font-size:50px;">@Model.QuestionText</h1>

  <form method="post" action="@Url.Action(Model.NextQuestion, "Game")">
    <fieldset>
      <input type="hidden" id="QuestionText" name="QuestionText" value="@Model.QuestionText">

      <div class="input-group" style="width:250px; margin-left:auto; margin-right:auto; margin-top:20px;">
        @Html.TextBoxFor(model => model.Answer, new { @class = "form-control" })
        <div class="input-group-btn">
          <button class="btn btn-primary" type="submit" value="" style="max-width:100%;">Go</button>
        </div>
      </div>

    </fieldset>
  </form>
</div>
