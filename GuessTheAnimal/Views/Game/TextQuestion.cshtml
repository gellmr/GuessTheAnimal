@model GuessTheAnimal.Models.QuestionViewModel

<div class="jumbotron" style="margin-top:20px;">

  @if (Model.FirstQuestion)
  {
    <h2>Ok now that you have thought of an animal...</h2>
  }

  <h1>@Model.QuestionText</h1>

  <form method="post" action="@Url.Action(Model.NextQuestion, "Game")">
    <fieldset>

      <input type="hidden" id="QuestionText" name="QuestionText" value="@Model.QuestionText">

      @Html.TextBoxFor(model => model.Answer, new { @class = "form-control" })
      <hr />

      <input type="submit" value="Ok" class="btn btn-primary btn-lg" value="Ok" />

    </fieldset>
  </form>

</div>